@{
}
@model List<Order>

<h1>Orders</h1>
<a class="button" asp-area="" asp-controller="Admin" asp-action="Index">Back</a>
<table>
  <thead>
    <tr>
      <th>Transaction ID</th>
      <th>Customer ID</th>
      <th>Date</th>
      <th>Day</th>
      <th>Time</th>
      <th>Entry</th>
      <th>Amount</th>
      <th>Type</th>
      <th>Country</th>
      <th>Shipping</th>
      <th>Bank</th>
      <th>Card</th>
      <th>Fraud</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    @foreach (var x in Model){
        <tr>
          <td>@x.TransactionId</td>
          <td>@x.CustomerId.ToString()</td>
            <td>@x.Date</td>
            <td>@x.DayOfWeek</td>
            <td>@x.Time?.ToString()</td>
            <td>@x.EntryMode</td>
            <td>@x.Amount?.ToString()</td>
            <td>@x.TypeOfTransaction</td>
            <td>@x.CountryOfTransaction</td>
            <td>@x.ShippingAddress</td>
            <td>@x.Bank</td>
            <td>@x.TypeOfCard</td>
            <td>@x.Fraud.ToString()</td>
            <td><a class="btn btn-info" asp-controller="Admin" asp-action="EditOrder" asp-route-orderid="@x.TransactionId">Edit</a></td>
            <td><a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteOrder" asp-route-orderid="@x.TransactionId">Delete</a></td>
        </tr>
        }
  </tbody>
</table>

<div class="text-center" id="predictionResult">
    @if (ViewBag.Prediction != null)
    {
        <h2>Prediction: @ViewBag.Prediction</h2>
    }
</div>

