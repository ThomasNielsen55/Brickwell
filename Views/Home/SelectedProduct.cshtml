@using Brickwell.Infrastructure;

@model ProductViewdude

<div class="container">
    <div class="row" style="color:white;">
        <div class="col-1" style="background-color: #272D6D;"></div>
        <div class="col-8" style="background-color: #272D6D;">
            <br/>
            <h1>@Model.selectedProduct.Name</h1>
        </div>
        <div class="col-3" style="background-color: #272D6D;">
            <h3>@Model.selectedProduct.Category <br />(@Model.selectedProduct.Year)</h3>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-7">
            <img src=@Model.selectedProduct.ImgLink class="img-fluid" alt=$"Image of {@Model.selectedProduct.Year} {@Model.selectedProduct.Name}" />
        </div>
        <div class="col-5">
            <div style="height: 500px; overflow-y: auto; background-color: #F3F3FC; border-radius: 20px; padding: 5px">
                <p>
                    @Model.selectedProduct.Description
                </p>
            </div>
            <br />
            <div class="container">
                <div class="row">
                    <div class="col-7">
                        <div><p>Peices: @Model.selectedProduct.NumParts</p></div>
                        <br />
                        <div><p>Price: @Model.selectedProduct.Price</p></div>
                    </div>
                    <div class="col-5">
                        @* <a method="get" asp-controller="Home" asp-action="Cart" asp-route-productnum="@Model.selectedProduct.ProductId"> *@

                        <form id=@Model.selectedProduct.ProductId method="post" asp-page="/Cart" asp-route-productid=@Model.selectedProduct.ProductId>
                            @* asp-route-productnum="@Model.selectedProduct.ProductId" *@
                            <input type="hidden" asp-for="selectedProduct.ProductId" />
                            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                                <button type="submit" style="background-color: #FFD700; border: solid; border-color: #E3000B; color: black; padding: 10px; text-align: center; text-decoration: none; display: inline-block; font-size: 24px; border-radius: 10px;">Add To Cart</button>
                            </form>
                        @* </a> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
